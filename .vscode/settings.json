{
  "git.ignoreLimitWarning": true,
  "python.analysis.diagnosticSeverityOverrides": {
    "reportGeneralTypeIssues": "none",
    "reportOptionalMemberAccess": "none"
  },
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.exclude": ["src"],
  "python.analysis.typeCheckingMode": "basic",
  "python.testing.unittestEnabled": true,
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "tests",
    "-p",
    "test_*.py"
  ],
  "search.exclude": {
    "**/material": true,
    "**/node_modules": true,
    "**/package-lock.json": true
  },
  "search.followSymlinks": false,
  "stylelint.validate": ["css", "scss"],
  "typescript.tsdk": "node_modules/typescript/lib",
  "extensions": [
        "ms-python.python",
        "redhat.vscode-yaml",
        "DavidAnson.vscode-markdownlint",
        "rvest.vs-code-prettier-eslint",
        "Simplicity.simplicityhl",
      ],
  "yaml.schemas": {
    "https://squidfunk.github.io/mkdocs-material/schema.json": [
      "mkdocs.yml",
      "file:///workspaces/simplicity-lang-org/mkdocs.yml"
    ],
    "https://json.schemastore.org/github-workflow.json": "/.github/workflows/*"
  },
  "yaml.customTags": [
    "!ENV scalar",
    "!ENV sequence",
    "tag:yaml.org,2002:python/object/apply:pymdownx.slugs.slugify",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
    "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format"
  ]
}
